{
  "name": "BlogMan",
  "displayName": "Blog Article Manage",
  "description": "A VSCode extension to manage and organize blog articles written in Markdown.",
  "version": "1.1.0",
  "publisher": "wherelse",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onView:markdownFilesView",
    "onCommand:blogArticleManage.changeSortOrder",
    "onCommand:blogArticleManage.changeGroupBy",
    "onCommand:blogArticleManage.refresh"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blogArticleManage",
          "title": "BlogMan",
          "icon": "resources/blog.svg"
        }
      ]
    },
    "views": {
      "blogArticleManage": [
        {
          "id": "markdownFilesView",
          "name": "Blog Articles"
        }
      ]
    },
    "commands": [
      {
        "command": "blogArticleManage.changeSortOrder",
        "title": "切换排序方式",
        "icon": {
          "light": "resources/sort.svg",
          "dark": "resources/sort.svg"
        }
      },
      {
        "command": "blogArticleManage.changeGroupBy",
        "title": "切换分组方式",
        "icon": {
          "light": "resources/group.svg",
          "dark": "resources/group.svg"
        }
      },
      {
        "command": "blogArticleManage.refresh",
        "title": "刷新 Markdown 文件视图",
        "icon": {
          "light": "resources/refresh.svg",
          "dark": "resources/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blogArticleManage.changeGroupBy",
          "when": "view == markdownFilesView",
          "group": "1_modification",
          "title": "切换分组方式"
        },
        {
          "command": "blogArticleManage.changeSortOrder",
          "when": "view == markdownFilesView",
          "group": "2_modification",
          "title": "切换排序方式"
        },
        {
          "command": "blogArticleManage.refresh",
          "when": "view == markdownFilesView",
          "group": "navigation",
          "title": "刷新视图"
        }
      ]
    },
    "keybindings": [
      {
        "command": "blogArticleManage.changeGroupBy",
        "key": "ctrl+alt+g",
        "when": "view == markdownFilesView",
        "mac": "cmd+alt+g"
      },
      {
        "command": "blogArticleManage.changeSortOrder",
        "key": "ctrl+alt+s",
        "when": "view == markdownFilesView",
        "mac": "cmd+alt+s"
      },
      {
        "command": "blogArticleManage.refresh",
        "key": "ctrl+alt+r",
        "when": "view == markdownFilesView",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.96.0",
    "eslint": "^8.0.0",
    "glob": "^7.1.6",
    "mocha": "^9.0.0",
    "typescript": "^4.4.3",
    "vscode-test": "^1.5.0"
  }
}
